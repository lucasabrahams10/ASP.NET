<header>
    <div class="container">
        <div class="logo"><img src="images/logo.svg" alt="">bmerketo</div>
        <nav id="menu" class="menu-links">
            <a class="link" asp-controller="home" asp-action="index">HOME</a>
            <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
            <a class="link" asp-controller="contact" asp-action="index">CONTACT</a>
            @if (signInManager.IsSignedIn(User) && User.IsInRole("admin"))
            {
                <a class="link" asp-controller="admin" asp-action="index">ADMIN</a>
            }
        </nav>
        <nav class="menu-icons">
            <a class="link" asp-controller="product" asp-action="search"><i class="fa-regular fa-search"></i></a>
            @if (signInManager.IsSignedIn(User))
            {
                <a class="link" asp-controller="accout" asp-action="index">@User.Identity?.Name</a>
                <a class="link" asp-controller="accout" asp-action="logout">LOGOUT</a>
            }
            else
            {
                <a class="link" asp-controller="accout" asp-action="login">Login</a>
            }
            <a class="link" asp-controller="cart" asp-action="index"><i class="fa-solid fa-cart-shopping"></i></a>
        </nav>
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>