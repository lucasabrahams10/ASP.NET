@model ProductRegistrationViewModel

<a asp-controller="product" asp-action="index" asp-route-id="@Model.ArticleNumber" class="collection-item">
    <img src="~/images/placeholders/270x295.svg">
    <div class="body">
        <div class="Title">@Model.Name</div>
        <div class="info">
            <div class="price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>