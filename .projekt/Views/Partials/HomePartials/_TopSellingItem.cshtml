@model ProductRegistrationViewModel

<a class="collection-item" asp-controller="product" asp-action="index" asp-route-id="@Model.ArticleNumber">
    <img src="~/images/placeholders/270x295.svg" alt="@Model.Name">
    <div class="body">
        <div class="title">@Model.Name</div>
        <div class="info">
            <div class="price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>