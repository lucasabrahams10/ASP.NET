@{
    var upToSell = ViewBag.UpToSell;
    var counter = 0;
}

@if (upToSell != null)
{
    <section class="up-to-sell">
        <div class="container">
            <div class="collection-grid">
                
                    @foreach(var product in upToSell)
                    {
                    <div class=item-@(counter + 1)>
                        <a asp-controller="product" asp-action="index" asp-route-id="@product.ArticleNumber" class="collection-item">
                            <img src="~/images/placeholders/369x310.svg" alt="@product.Name">
                            <div class="body">
                                <div class="title">@product.Name</div>
                                <div class="info">
                                    <div class="price">$@product.Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                    @if (counter == 0)
                    {
                        <div class="collection-content">
                            <div class="container">
                                <div class="title-red">UP TO SELL</div>
                                <div class="title">50% OFF</div>
                                <div class="ingress">Get the Best Price</div>
                                <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                                <a asp-controller="home" asp-action="index" class="link">Discover More</a>
                            </div>
                        </div>
                        counter++;
                    }
                    }
                
            </div>
        </div>
    </section>
}